@model IEnumerable<SargeStore.ViewModels.EmployeeView>

@{ 
    ViewBag.Title = "Таблица сотрудников";
}

<h3>@ViewBag.Title</h3>

<div class="btn btn-default">
    <a asp-action="Create" class="fa fa-user-plus"> Создать новый сотрудник</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
            <th></th>
            
        </tr>
    </thead>

    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.LastName</td>
                <td>@employee.FirstName</td>
                <td><a asp-action="Details" asp-route-Id="@employee.Id">
                    @employee.Patronymic
                    </a>
                </td>
                <td>@employee.Age</td>
                <td>
                    <div class="btn btn-default">
                        <a asp-action="Edit" asp-route-Id="@employee.Id"> <i class="fa fa-user-edit">  Изменить</i> </a>
                    </div>
                    <div class="btn btn-default">
                        <a asp-action="Delete" asp-route-Id="@employee.Id"> <i class="fa fa-trash">  Удалить</i> </a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>