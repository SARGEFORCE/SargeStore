@model IEnumerable<SargeStore.ViewModels.EmployeeView>

@{ 
    ViewBag.Title = "Таблица сотрудников";
}

<h3>@ViewBag.Title</h3>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Patronymic</td>
                <td>@employee.FirstName</td>
                <td><a asp-action="Details" asp-route-Id="@employee.Id">
                    @employee.LastName
                    </a>
                </td>
                <td>@employee.Age</td>
                <td>
                    <a asp-action=" Edit" asp-route-Id="@employee.Id"> <i class="fa fa-user-edit">Edit</i> </a>
                </td>
            </tr>
        }

    </tbody>
</table>